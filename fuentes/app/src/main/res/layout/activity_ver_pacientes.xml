<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerPacientesActivity">
    <include layout="@layout/toolbar"></include>
    <ImageView
        android:layout_marginTop="@dimen/margin_top_paciente"
        android:layout_gravity="center"
        android:id="@+id/image_pacie_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
    <TextView
    android:textSize="@dimen/tamaño_letra_list"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_top_paciente"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/nombrePacienteTxt"
    ></TextView>
    <TextView
        android:textSize="@dimen/tamaño_letra_list"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_top_paciente"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/apellidoPacienteTxt"
        ></TextView>
    <TextView
        android:textSize="@dimen/tamaño_letra_list"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_top_paciente"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/RUTPacienteTxt"
        ></TextView>
    <TextView
        android:textSize="@dimen/tamaño_letra_list"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_top_paciente"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/fechaPacienteTxt"
        ></TextView>
    <TextView
        android:textSize="@dimen/tamaño_letra_list"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_top_paciente"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/areaPacienteTxt"
        ></TextView>
    <LinearLayout
        android:background="@color/primary_light"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/accent"
        android:textSize="@dimen/tamaño_letra_list"
        android:text="Sintomas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_weight="1"
        android:textColor="@color/accent"
        android:textSize="@dimen/tamaño_opcion"
        android:text="Sintomas Covid:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/sintomasPacienteTxt"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tamaño_opcion"
        ></TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/accent"
            android:textSize="@dimen/tamaño_opcion"
            android:text="Presenta Tos:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/tosPacienteTxt"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tamaño_opcion"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/accent"
            android:textSize="@dimen/tamaño_opcion"
            android:text="Temperatura:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/temperaturaPacienteTxt"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tamaño_opcion"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/accent"
            android:textSize="@dimen/tamaño_opcion"
            android:text="Presión Arterial:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/presionPacienteTxt"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tamaño_opcion"
            ></TextView>
    </LinearLayout>


</LinearLayout>